<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cityrelay.com/wp-content/uploads/2017/01/feature-image.jpg');">
  <div class="banner-content">
    <div class="portrait-container">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle portrait" %>
      <div class="rating text-center"><%= flat.rating %></div>
    </div>
  <h1><%= flat.name %></h1>
  <p><%= flat.description %></p>
  <p><%= flat.city_name %></p>
  <p>
    <% if flat.wifi? %>
      <i class="fa fa-wifi" aria-hidden="true"></i>
    <% end %>
    </p>
  </div>
</div>


